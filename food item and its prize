#include<stdio.h>
//#include<conio.h>
void main()
{
     int ch=0;
     //clrscr();

     printf("\n1pizza \n2burger \n3pasta\n4french fries \n5sandwich");
     printf("\n Enter choice");
     scanf("%d",&ch);

    switch(ch)
    {
       case 1:  printf("\n pizza Rs:239");
                break;

       case 2:  printf("\n burger Rs:129");
               break;

       case 3:  printf("\n pasta Rs:179");
               break;

       case 4:  printf("\n french fries fries Rs:99");
                break;

       case 5:  printf("\n sandwich Rs:149");
                break;

                default:printf("\n invalid choice");
    }
}
